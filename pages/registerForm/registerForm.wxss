#vipSuccess .card-wrap {
  height: 210px;
  padding-top:30px;
  /* border-bottom:1px solid #dcdcdc; */
  margin-bottom: 40px;
}
#vipSuccess .blank{
  height: 20px;
}
#vipSuccess .card-wrap .card {
  height: 180px;
  width: 84%;
  background: rgb(61, 183, 248);
  margin: 0 auto;
  overflow: hidden;
  border-radius: 10px;
  position: relative;
  background-size: 100% 100%;
}
#vipSuccess .card .logo {
  height: 50px;
  width: 50px;
  overflow: hidden;
  position: absolute;
  left: 20px;
  top: 25px;
}
#vipSuccess .card .barcode {
  height: 25px;
  width: 25px;
  overflow: hidden;
  position: absolute;
  right: 20px;
  top: 35px;
}
#vipSuccess .card .title {
  position: absolute;
  top: 25px;
  left: 80px;
  font-size: 18px;
  color: #222;
}
#vipSuccess .card .level {
  position: absolute;
  top: 50px;
  left: 80px;
  font-size: 12px;
  color: #222;
}
#vipSuccess .card .cardno {
  position: absolute;
  bottom: 20px;
  left: 20px;
  color: #222;
  letter-spacing: 4px;
  /* text-shadow:1px 0 #eee,0 -1px #eee, 1px 0 #333,0 1px #333; */
}
#vipSuccess .card .duration {
  position: absolute;
  bottom: 20px;
  left: 20px;
  color: #222;
}

