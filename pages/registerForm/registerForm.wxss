
page {
  background-color: #efeff4;
  color: #000;
}

input::-webkit-input-placeholder {
  color: #b2b2b2;
}

.bindPhone-wrap {
  padding-top: 20px;
}

.verify-row {
  padding: 10px 0;
  background-color: #fff;
  margin: 10px 12px;
  border: 1px solid #d8d8d8;
  border-radius: 6px;
}

.item-name {
  display: inline-block;
  vertical-align: middle;
  width: 30%;
  text-align: left;
  padding-left: 10px;
}

.item-name.code, .item-name.name {
  width: 20%;
}

input {
  display: inline-block;
  width: 60%;
  margin-right: 2%;
  height: 20px;
  line-height: 20px;
  /* padding: 4px; */
  font-size: 14px;
  color: #646464;
  vertical-align: middle;
}

.code-tel {
  width: 60%;
}

.new-code {
  width: 40%;
}

.option-btn {
  display: block;
  width: 90%;
  line-height: 40px;
  margin: 20px auto;
  color: #fff;
  background-color: #09bb07;
  border: 1px solid #029400;
  border-radius: 4px;
  text-align: center;
}

.bind-new-tel-btn {
  opacity: 1;
}

.bind-new-tel-btn.disabled {
  opacity: 0.4;
}

.get-code-btn {
  display: inline-block;
  width: 25%;
  line-height: 20px;
  padding: 4px 0;
  font-size: 12px;
  vertical-align: middle;
  color: #09bb07;
  background-color: #fff;
  text-align: center;
  border: 1px solid;
}

.support-tip {
  font-size: 12px;
  color: #ccc;
  text-align: center;
}

.button {
  height: 150rpx;
  line-height: 150rpx;
  color: #fff;
  text-align: center;
  width: 50%;
}

.navigator-cls {
  margin: 40px 12px 10px;
}

.linkCnt {
  margin-bottom: 40px;
}

.text-style {
  color: rgb(102, 102, 102);
  font-size: 14px;
  text-align: left;
  text-decoration: none;
  background: transparent;
  border-bottom: 1px solid #333;
}

.button-group {
  /* position: fixed; */
  bottom: 0px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.button-second {
  background-color: #f00;
  left: 50%;
}
.input-item {
  position: relative;
  margin: 15px;
  padding: 5px;
  border-top: 1px solid #d8d8d8;
  border-bottom: 1px solid #d8d8d8;
  border-left: 1px solid #d8d8d8;
  border-right: 1px solid #d8d8d8;
  border-radius: 5px;
  background-color: #fff;
}

.input-item.view{
  border: none;
  color:#d8d8d8;
  margin:5px 15px;
  display: flex;
  flex-direction: column;
  background: none;
}
.input-item .labelText{
  color: #333;
}
.input-item input.input{
  display: block;
  width: 100%;
  padding: none;
  
}
.selectBox{
  display:block;
  /* width: 100%; */
}
