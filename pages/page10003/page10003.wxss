.grid-row {
  display: flex;
  flex-direction: row;
  padding: 20px 0px 20px 0px;
}

.swiper {
  height: 240px;
  opacity: 1;
  margin-left: auto;
  background-image: url(http://img.weiye.me/zcimgdir/album/file_59df829adb9d6.jpg);
}
.swiper-block{
  background: rgba(0, 0, 0, 0.8);
}

.circle-title {
  font-size: 16px;
  margin-bottom: 5px;
}

.circle-count {
  font-size: 24px;
}

.buydes-dialog-container {
  width: 100%;
  height: 100%;
  /* justify-content: space-between;   */
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  z-index: 999;
}

.buydes-dialog-container-top .card-wrap {
  border-bottom: none;
  height: 210px;
  width: 100%;
  padding-top: 30px;
}

.buydes-dialog-container-top .card .title {
  position: absolute;
  top: 20px;
  left: 80px;
  font-size: 18px;
  color: #333;
}

.buydes-dialog-container-top .card .level {
  position: absolute;
  top: 48px;
  left: 80px;
  color: #333;
}

.buydes-dialog-container-top .card .cardno {
  bottom: 20px;
  text-shadow: none;
  position: absolute;
  left: 20px;
  color: #333;
  letter-spacing: 4px;
}

.buydes-dialog-container-first {
  flex-grow: 0;
}

.buydes-dialog-container-first .tip {
  margin-top: 15%;
  display: block;
  position: relative;
  color: #fff;
  text-align: center;
}

.buydes-dialog-container-top {
  flex-grow: 1;
}

.buydes-dialog-container-bottom {
  display: flex;
  flex-grow: 0;
}

.buydes-dialog-container-bottom-item {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.buydes-dialog-container-top .card .logo {
  height: 50px;
  width: 50px;
  overflow: hidden;
  position: absolute;
  left: 20px;
  top: 20px;
}

.buydes-dialog-container-top .card-wrap .card {
  height: 180px;
  width: 84%;
  background: rgb(61, 183, 248);
  margin: 0 auto;
  overflow: hidden;
  border-radius: 10px;
  position: relative;
  background-size: 100% 100%;
}

.buydes-dialog-container-top .card .barcode {
  height: 25px;
  width: 25px;
  overflow: hidden;
  position: absolute;
  right: 20px;
  top: 20px;
}

.buydes-dialog-container-bottom .code {
  display: flex;
  position: relative;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.buydes-dialog-container-bottom .barcode {
  width: 78%;
  height: 100px;
  vertical-align: middle;
  padding: 4%;
  background: #fff;
  border-radius: 10px;
}

.buydes-dialog-container .button {
  height: 150rpx;
  line-height: 150rpx;
  width: 100%;
  display: block;
  position: relative;
  color: #fff;
  background-color: #f00;
  text-align: center;
}

.buydes-dialog-container .tab-group {
  background-color: rgba(0, 0, 0, 0);
  color: #fff;
  border: none;
}
