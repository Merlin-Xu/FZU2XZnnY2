.grid-row {
  display: flex;
  flex-direction: row;
  padding: 20px 0px 20px 0px;
}

.swiper {
  height: 240px;
  opacity: 1;
  margin-left: auto;
  background-image: url(http://img.weiye.me/zcimgdir/album/file_59e3573997f27.png);
  background-size: 100%;
}

.swiper-block {
  background: rgba(0, 0, 0, 0.8);
}

.circle-title {
  font-size: 16px;
  margin-bottom: 5px;
}

.circle-count {
  font-size: 24px;
}

.displayNone {
  display: none;
}

.containerCircle {
  background: transparent;
  border: 5px solid #00b0b0;
  width: 200px;
  height: 200px;
  border-radius: 200px;
}

.circle1 {
  border: 5px solid #00b0b0;
}

.circle2 {
  transform: rotate(45deg);
  border: 5px solid #f0c050;
  border-left: 5px solid gray;
  border-bottom: 5px solid gray;
  border-right: 5px solid #f0c050;
  border-radius: 200px;
}

.circle3 {
  border: 5px solid #e03070;
}
