<view class="app" hidden="{{page_hidden}}">
  <template name="zcCarousel">
    <swiper indicator-dots="true" circular="true" autoplay="{{data.customFeature.autoplay}}" vertical="{{data.customFeature.vertical}}" interval="{{data.customFeature.interval*1000}}" duration="750" style="{{data.style}}">
      <block wx:for="{{data.content}}" wx:key="">
        <swiper-item data-event-params="{{item.eventParams}}" catchtap="{{item.eventHandler}}">
          <image class="swiper-item" src="{{item.pic}}" />
        </swiper-item>
      </block>
    </swiper>
  </template>
  <view class="ele-container">
    <template is="zcCarousel" data="{{data:carousel1}}"></template>
  </view>
  <template name="zcFreeVessel2">
    <view class="element free-vessel" style="{{data.style}}" data-event-params="{{data.eventParams}}" catchtap="{{data.eventHandler}}">
      <view class="ele-container">
      <template name="zcPicture">
        <block>
           <view class="element picture" style="{{data.style}}" data-event-params="{{data.eventParams}}" data-imgArr="{{data.content}}" catchtap="{{data.eventHandler}}">
              <image src="{{data.content}}" mode="scaleToFill"></image>  
          </view> 
        </block>
      </template>
      <template name="zcText">
        <block>
              <text class="element text" style="{{data.style}}" data-event-params="{{data.eventParams}}" catchtap="{{data.eventHandler}}">{{data.content}}</text>    
        </block>
      </template>
        <block>
           <template is="zcPicture" data="{{data:data.content[0], detail_data: detail_data}}"></template> 
        </block>
      </view>
      <view class="ele-container">
        <block>
           <template is="zcPicture" data="{{data:data.content[5], detail_data: detail_data}}"></template> 
        </block>
      </view>
      <!-- 绑定会员卡 -->
      <view class="ele-container" bindtap='bindLoyalT'>
        <block>
           <template is="zcPicture" data="{{data:data.content[1], detail_data: detail_data}}"></template>  
           <template is="zcText" data="{{data:data.content[7], detail_data: detail_data}}"></template> 
           <template is="zcPicture" data="{{data:data.content[6], detail_data: detail_data}}"></template> 
        </block>
      </view>
      <!-- 注册新会员 -->
      <view class="ele-container" bindtap='registerScan'>
        <block>
           <template is="zcPicture" data="{{data:data.content[2], detail_data: detail_data}}"></template> 
           <template is="zcPicture" data="{{data:data.content[12], detail_data: detail_data}}"></template>
           <template is="zcText" data="{{data:data.content[13], detail_data: detail_data}}"></template> 
        </block>
      </view>
      <!-- 我的会员卡 -->
      <view class="ele-container" bindtap="redirectProfile">
        <block>
            <template is="zcPicture" data="{{data:data.content[3], detail_data: detail_data}}"></template>  
           <template is="zcText" data="{{data:data.content[10], detail_data: detail_data}}"></template> 
           <template is="zcPicture" data="{{data:data.content[11], detail_data: detail_data}}"></template> 
        </block>
      </view>


<!-- 联系我们 -->
      <view class="ele-container">
        <block>
            <template is="zcPicture" data="{{data:data.content[4], detail_data: detail_data}}"></template>  
            <template is="zcPicture" data="{{data:data.content[8], detail_data: detail_data}}"></template>  
           <template is="zcText" data="{{data:data.content[9], detail_data: detail_data}}"></template> 
        </block>
      </view>
    </view>
  </template>
  <view class="ele-container">
    <block>
      <template is="zcFreeVessel2" data="{{data:free_vessel2, detail_data: detail_data ,index:index,item : item , parentType : free_vessel2.parentCompid , page_form : free_vessel2.page_form , dataId : dataId}}"></template>
    </block>
  </view>

</view>